<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="enableSLW">
                <display-name xml:lang="x-default">Enable Woosmap Store Locator Widget</display-name>
                <description xml:lang="x-default">Activate Woosmap Store Locator Widget in your website</description>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="woosmapPublicApiKey">
                <display-name xml:lang="x-default">Woosmap Public Api Key</display-name>
                <description xml:lang="x-default">Public Api Key for Woosmap</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="mobileBreakPoint">
                <display-name xml:lang="x-default">Mobile Break Point</display-name>
                <description xml:lang="x-default">Render SLW in Mobile View when client screen is under this value (in
                    pixel)
                </description>
                <type>int</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>900</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="storeLocatorWidgetConf">
                <display-name xml:lang="x-default">Store Locator Widget Configuration</display-name>
                <description xml:lang="x-default">JSON description of Store Locator Widget configuration</description>
                <type>text</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Woosmap">
                <display-name xml:lang="x-default">Woosmap</display-name>
                <attribute attribute-id="enableSLW"/>
                <attribute attribute-id="woosmapPublicApiKey"/>
                <attribute attribute-id="mobileBreakPoint"/>
                <attribute attribute-id="storeLocatorWidgetConf"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
</metadata>
